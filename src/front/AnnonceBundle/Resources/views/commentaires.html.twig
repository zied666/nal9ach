{% extends ":front:base.html.twig" %}
{% block title %}Non-Lus({{ commentaires|length }}){% endblock %}
{% block body %}
    <div class="darker-stripe">
        <div class="container">
            <div class="row">
                <div class="span12">
                    <ul class="breadcrumb">
                        <li>
                            <a href="{{ path('accueil') }}">Accueil</a>
                        </li>
                        <li><span class="icon-chevron-right"></span></li>
                        <li>
                            <a href="javascript:void(0)">Commentaires non-lus</a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
    <div class="container">
        <div class="push-up top-equal blocks-spacer-last">
            <div class="row">
                <div class="span12">
                    <div class="title-area">
                        <h1 class="inline"><span class="light">Commentaires  </span>Non-lus</h1>
                    </div>
                </div>
                <section class="span12 single single-page">
                    <section class="contact-form-container">
                        <table class="table table-striped table-bordered">
                            <thead>
                                <tr>
                                    <th>Nom</th>
                                    <th>Tel</th>
                                    <th>Email</th>
                                    <th>Texte</th>
                                    <th>Date</th>
                                    <th>Annonce</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for comm in commentaires %}
                                    <tr>
                                        <td>{{ comm.nom }}</td>
                                        <td>{{ comm.tel }}</td>
                                        <td>{{ comm.email }}</td>
                                        <td>{{ comm.texte }}</td>
                                        <td>{{ comm.getDateCreation|date('d/m/Y') }}</td>
                                        <td><a href="{{ path('front_service_homepage',{'titre':comm.annonce.GetUrl,'id':comm.annonce.id}) }}" >{{ comm.annonce.titre }}</a></td>
                                        <td>
                                            <a href="{{ path('luscomment',{'id':comm.id}) }}" title="Marquer comme lus"><i class="icon-eye-open"></i></a>
                                            <a href="{{ path('deletecomment',{'id':comm.id}) }}" onclick="javascript:return(confirm('Etes-vous certain de vouloir supprimer ce commentaire ?'))" title="Supprimer ce commentaire"><i class=" icon-trash"></i></a>
                                        </td>
                                    </tr>
                                {% endfor %}
                        </table>
                    </section>
                </section>
            </div>
        </div>
    </div>    
    
    <style>
        td,th{
            text-align: center !important;
        }
    </style>
{% endblock %}
