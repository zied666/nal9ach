<div class="darker-stripe blocks-spacer more-space latest-news with-shadows">
    <div class="container">
        <div class="row">
            <div class="span12">
                <div class="main-titles center-align">
                    <h2 class="title">
                        <span class="clickable icon-chevron-left" id="tweetsLeft"></span> &nbsp;&nbsp;&nbsp;
                        <span class="light">Derni√®res</span>  Nouvelles &nbsp;&nbsp;&nbsp;
                        <span class="clickable icon-chevron-right" id="tweetsRight"></span>
                    </h2>
                </div>
            </div>
        </div> <!-- /title -->
        <div class="row">
            <div class="span12">
                <div class="carouFredSel" data-nav="tweets" data-autoplay="false">
                    {% for new in news %}
                    <div class="slide">
                        <div class="row">
                            <div class="span12">
                                <div class="news-item">
                                    <div class="published">{{ new.creation|date('d/m/Y') }}</div>
                                    <h6><a href="#">{{ new.titre }}</a></h6>
                                    <p>{{ new.texte }}</p>
                                </div>
                            </div>
                        </div>
                    </div> <!-- /slide -->
                    {% endfor %}
                </div>
            </div>
        </div> <!-- /news content -->
    </div>
</div> <!-- /latest news -->