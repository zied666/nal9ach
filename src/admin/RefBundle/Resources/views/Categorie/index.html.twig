{% extends ':admin:base.html.twig' %}

{% block body %}
    <nav>
        <div id="jCrumbs" class="breadCrumb module">
            <ul>{% block sitmap %}
                <li>    
                    <a href="{{ path("admin_general_homepage") }}"><i class="icon-home"></i></a>
                </li>
                <li>    
                    <a  href="{{ path("categorie") }}">Cat√©gories</a>
                </li>
            {% endblock %}
        </ul>
    </div>
</nav> 
<div class="row-fluid">
    <div class="span12"> 
        <table class="table table-striped table-bordered dTableR" id="dt_a">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Libelle</th>
                    <th>Description</th>
                    <th>Ordre</th>
                    <th>Visible</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for entity in entities %}
                    <tr>
                        <td><a href="{{ path('categorie_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                        <td>{{ entity.libelle }}</td>
                        <td>{{ entity.description }}</td>
                        <td>{{ entity.ordre }}</td>
                        <td>{% if entity.visible %}Visible{% else %} Non-Visible {% endif %}</td>
                        <td>
                            <a href="{{ path("categorie_edit",{'id':entity.id}) }}" class="sepV_a" title="Modifier"><i class="icon-pencil"></i></a>
                            <a href="{{ path("categorie_show",{'id':entity.id}) }}" class="sepV_a" title="consulter"><i class="icon-eye-open"></i></a>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
</div>
<ul>
    <li>
        <a href="{{ path('categorie_new') }}">
            Creation
        </a>
    </li>
</ul>
{% endblock %}
