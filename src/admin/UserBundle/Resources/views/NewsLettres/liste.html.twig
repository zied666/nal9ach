{% extends ':admin:base.html.twig' %}
{% block title %}NewsLetters{% endblock %}

{% block body %}
    <nav>
        <div id="jCrumbs" class="breadCrumb module">

            <ul>{% block sitmap %}
                <li>    
                    <a href="{{ path("admin_general_homepage") }}"><i class="icon-home"></i></a>
                </li>
                <li>    
                    <a href="javascript:void(0)">NewsLetters</a>
                </li>
            {% endblock %}
        </ul>
    </div>
</nav>    
<div class="row-fluid">
    <div class="span12">
        <h3 class="heading"><a class="btn" href="{{ path('NewsLettersSend') }}"><i class="icon-share"></i>Envoyer un Email.</a></h3>
        <table class="table table-striped table-bordered dTableR" id="dt_a">
            <thead>
                <tr>
                    <th>Email</th>
                    <th width="5%"></th>
                </tr>
            </thead>
            <tbody>
                {% for newsletter in newsletters %}
                    <tr>
                        <td>{{ newsletter.email }}</td>
                        <td>
                            <a href="{{ path("NewsLettersRemove",{'id':newsletter.id}) }}" title="Supprimer" onclick="javascript:return(confirm('Etes-vous certain de vouloir supprimer ce mail ?'))"><i class="icon-trash"></i></a>
                        </td>
                    </tr>
                {%endfor%}
            </tbody>

        </table>
    </div>
</div>
{% endblock %}