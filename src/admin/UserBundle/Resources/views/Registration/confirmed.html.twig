{% extends ":front:base.html.twig" %}
{% block title %}Confirmation{% endblock %}

{% trans_default_domain 'FOSUserBundle' %}

{% block body %}
    <div class="darker-stripe">
        <div class="container">
            <div class="row">
                <div class="span12">
                    <ul class="breadcrumb">
                        <li>
                            <a href="{{ path('accueil') }}">Accueil</a>
                        </li>
                        <li><span class="icon-chevron-right"></span></li>
                        <li>
                            <a href="javascript:void(0)">Confirmation</a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
    <div class="container" style="min-height: 300px;">
        <div class="push-up top-equal blocks-spacer-last">
            <div class="row">
                <section class="span12 single single-page">
                    <section class="contact-form-container">
                        <h4 class="inline">FÃ©licitation !! </h4>
						<p>{{ 'registration.confirmed'|trans({'%username%': user.username}) }}</p>
                        {% if app.session is not empty %}
                            {% set targetUrl = app.session.get('_security.' ~ app.security.token.providerKey ~ '.target_path') %}
                            {% if targetUrl is not empty %}<p><a href="{{ targetUrl }}">{{ 'registration.back'|trans }}</a></p>{% endif %}
                        {% endif %}  
                    </section>
                </section>
            </div>
        </div>
    </div>

{% endblock body %}
